# DHR Backend Configuration

# Server
NODE_ENV=development
PORT=3001
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Elasticsearch Configuration
ELASTICSEARCH_HOST=https://your-elasticsearch-host:9200
ELASTICSEARCH_USERNAME=your-username
ELASTICSEARCH_PASSWORD=your-password
ELASTICSEARCH_CA_CERT=path/to/ca.crt

# Allowed Health Data Indexes (comma-separated)
ALLOWED_HEALTH_INDEXES=health-data-patients,health-data-visits,health-data-treatments,health-data-outcomes

# DHR Configuration Indexes
DHR_CONFIG_PREFIX=dhr-pb
TENANT_ID=pb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/dhr.log

# Security
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h
# Server Configuration
NODE_ENV=development
PORT=4000

# Elasticsearch Configuration
ES_HOST=http://localhost:9200
ES_USERNAME=elastic
ES_PASSWORD=changeme
ES_API_KEY=

# Allowed Indices (comma-separated, supports wildcards)
ES_ALLOWED_INDICES=kibana_sample_data_*,test-*

# User Role Configuration (for development)
# In production, this should come from request headers or session
DEFAULT_USER_ROLE=reports-admin

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info